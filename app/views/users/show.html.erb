<div class="bckg">
  <div class="container user-page">
    <div>
      <h1><%= current_user.first_name %> <%= current_user.last_name %></h1>
    </div>
      <ul class="list-group">
        <% current_user.bookings.each do |booking| %>
          <li class="list-group-item">
            <h2><strong><%= booking.service.name %></strong></h2>
            <strong><%= booking.tagligne %></strong>
            <%= booking.date %>
            <br>
            <br>
            <%= link_to "Unlock this", booking_path(booking),
              method: :delete, data: { confirm: "Are you sure?" }, class: "bouton-all" %>
          </li>
        <% end %>
      </ul>
    </div>
    <br>
    <br>
    <a class="bouton-all" href="/services">
      <strong>LOCK ME</strong> more !
    </a>
  </div>
</div>
