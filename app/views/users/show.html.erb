<br>
<div class="container">
  <div>
    <h1><%= @user.first_name %> <%= @user.last_name %></h1>
  </div>
    <ul class="list-group">
      <% @user.booking.each do |booking| %>
        <li class="list-group-item">
        <strong><%= booking.service.name %></strong>
        <br>
        <%= booking.date %>
        <%# pour cancel le booking
        <br>
        <br>
        <%= link_to "Cancel this booking", booking_path(booking),
        method: :delete, data: { confirm: "Are you sure?" } %\></li> %>
      <% end %>
    </ul>
  </div>
  <div class="bouton">
    <%# il faudra probablement changer le path %>
    <%= link_to 'reserve an other Charlie', new_user_booking_path(@user) %>
  </div>
</div>
